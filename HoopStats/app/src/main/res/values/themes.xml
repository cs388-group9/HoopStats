<!-- themes.xml -->
<resources>
    <!-- Define the background gradient -->
    <drawable name="background_gradient">@drawable/gradient_background</drawable>

    <!-- Define the Theme.HoopStats theme -->
    <style name="Theme.HoopStats" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the background to the gradient -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
    </style>

    <!-- Define the AppTheme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- No need to set background here -->
    </style>
</resources>
